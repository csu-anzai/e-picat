<div class="content" style="margin-top: 100px;">
  <div class="d-flex justify-content-center h-100">
    <div class="form-block text-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <img class="mb-4" src="https://world-war-ii-66.webself.net/file/si756049/logo-chat-copie-fi11480315x1200.jpg" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connect√©</h1>
      <%= f.label :email, class: 'sr-only'%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-3',placeholder: "Adresse email"%>
      <%= f.label :password, class: 'sr-only'%>
      <%= f.password_field :password, autocomplete: "current-password",class:"form-control" ,placeholder: "Mot de passe"%>
      <% if devise_mapping.rememberable? %>
        <div class="field p-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <%= f.submit "Se connecter", class:"btn btn-secondary mb-3" %>
        <div>
          <%= render "devise/shared/links",class:"card-footer" %>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
