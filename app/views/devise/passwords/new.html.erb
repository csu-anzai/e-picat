<div class="content" style="margin-top: 100px;">
	<div class="d-flex justify-content-center h-200">
		<div class="form-block text-center">
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>
			<img class="mb-4" src="https://world-war-ii-66.webself.net/file/si756049/logo-chat-copie-fi11480315x1200.jpg" alt="" width="72" height="72">
			<h2>Forgot your password?</h2>
			<%= f.label :email , class: 'sr-only'%>
			<%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control mb-3',placeholder: "Adresse email"%>
			<div class="actions">
				<%= f.submit "Send me reset password instructions", class:"btn btn-outline-info  mb-3"  %>
			</div>
			<div class="card-footer">
				<%= render "devise/shared/links" %>
			</div>
			<% end %>
		</div>
	</div>
</div>